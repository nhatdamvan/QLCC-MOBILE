{
    "include": ["src/**/*", "./App.tsx"],
    "compilerOptions": {
      /* Visit https://aka.ms/tsconfig.json to read more about this file */
  
      /* Completeness */
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true  ,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],
        "components/*": [
          "src/components/*"
        ],
        "screens/*": [
          "src/screens/*"
        ],
        "services/*": [
          "src/services/*"
        ],
        "constants/*": [
          "src/constants/*"
        ],
        "utils/*": [
          "src/utils/*"
        ],
        "styles/*": [
          "src/styles/*"
        ],
        "utils": [
          "src/utils"
        ],
        "navigation/*": [
          "src/navigation/*"
        ],
        "assets/*": [
          "src/assets/*"
        ],
        "type/*": [
          "src/type/*"
        ],
        "routes/*": [
          "src/routes/*"
        ],
        "api/*": [
          "src/api/*"
        ],
        "hooks/*": [
          "./src/hooks/*"
        ],
        "reducer/*": [
          "./src/redux/reducer/*"
        ],
        "saga/*": [
          "./src/redux/saga/*"
        ],
        "store/*": [
          "./src/redux/store/*"
        ],
        "api": [
          "./src/api"
        ]
      }                               /* Skip type checking all .d.ts files. */
    }
  }
  